<% layout("layout/boilerplate") %>
<div class="row mt-3">
  <div class="col-8 offset-2">
    <br />
    <h1>Create a new listing</h1>
    <form
      method="post"
      action="/Listings"
      novalidate
      class="needs-validation"
      enctype="multipart/form-data"
    >
      <div class="mb-2">
        <label for="title" class="form-lable">Title:</label>
        <input
          type="text"
          name="listing[title]"
          id="title"
          class="form-control"
          required
        />
        <div class="valid-feedback">title looks good!</div>
        <div class="invalid-feedback">please enter title name</div>
      </div>

      <div class="mb-2">
        <label for="des" class="form-lable">Description:</label>
        <textarea
          name="listing[description]"
          id="des"
          class="form-control"
          required
        ></textarea>
        <div class="invalid-feedback">please enter valid description!</div>
      </div>

      <div class="mb-2">
        <label for="img" class="form-lable">Upload New Image</label>
        <input
          type="file"
          name="listing[image]"
          id="img"
          class="form-control"
        />
      </div>

      <div class="row">
        <div class="mb-2 col-md-4">
          <label for="p" class="form-lable">Price:</label>
          <input
            type="number"
            name="listing[price]"
            id="p"
            class="form-control"
          />
        </div>

        <div class="mb-2 col-md-8">
          <label for="c" class="form-lable">Country:</label>
          <input type="text" name="listing[country]" class="form-control" />
        </div>
      </div>

      <div class="mb-2">
        <label for="loc" class="form-lable">Location:</label>
        <input
          type="text"
          name="listing[location]"
          id="loc"
          class="form-control"
        />
      </div>

      <button class="btn btn-dark add-btn mt-3">Add</button>
      <br />
      <br />
    </form>
  </div>
</div>
